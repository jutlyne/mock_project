<% content_for :style do %>
  <link href="css/sb-admin-2.min.css" rel="stylesheet">
<% end %>

<div class="container-fluid">
  <h1 class="h3 mb-2 text-gray-800">List User</h1>

  <div class="card shadow mb-4">
    <div class="card-header py-3">
    </div>
    <div class="card-body">
      <%= link_to new_user_path, class: "d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm mb-2" do %>
        <i class="fa-solid fa-plus fa-sm text-white-50"></i>
        <span>Create</span>
      <% end %>
      <div class="table-responsive">
        <table class="table table-bordered" width="100%" cellspacing="0">
          <thead>
            <tr>
              <th>ID</th>
              <th>Name</th>
              <th>Email</th>
              <th>Team</th>
              <th>Avatar</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.id %></td>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td><%= user.id %></td>
                <td><%= user.avatar %></td>
                <td class="d-flex gap-2">
                  <%= link_to "Edit", edit_user_path(user), class: "btn btn-sm btn-primary" %>
                  <%= button_to "Delete", user_path(user), method: :delete,
                        data: { turbo_confirm: "Are you sure?" },
                        class: "btn btn-sm btn-danger" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
